{
    "name": "Annotated News",
    "manifest_version": 2,
    "version": "1.0",

    "description": "For the curious.",

    "permissions": ["activeTab", "tabs", "declarativeContent", "storage","<all_urls>", "identity"],

    "background": {
        "scripts": ["src/jquery-3.5.1.js", "background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["src/jquery-3.5.1.js","src/popper.min.js", "src/icons.js", "content/modify.js"],
        "css": ["content/content.css"],
        "all_frames": false
    }],

    "web_accessible_resources": ["frame/frame.html", "frame/frame.css", "frame/frame.js", "content/active.js"],

    "content_security_policy": "script-src https://platform.twitter.com/widgets.js 'self'; object-src 'self'",

    "browser_action": {
        "default_popup": "popup/popup.html"
    },

    "icons": {
        "16": "images/logo2.PNG",
        "32": "images/logo2.PNG",
        "48": "images/logo2.PNG",
        "128": "images/logo2.PNG"
    }
}
